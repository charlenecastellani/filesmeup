

<section class="get_in_touch">
  <h1 class="titre">Demander un nouveau document</h1>
  <div class="container" >
    <div class="row contact-form">
      <div class="text-center">
       <%= simple_form_for([@request, @document]) do |f| %>
        <div class="form-field col-lg-12"> 
          <%= f.label :nom, class:"label" %>
          <%= f.text_field :nom, class:"input-text" %>
        </div>
        
        <div class="form-field col-lg-12"> 
          <%= f.label :description, class:"label" %>
          <%= f.text_field :description, class:"input-text" %>
        </div>

        <%= f.submit value= "Ajouter", class:"btn btn-pink" %>
        <% end %>
      </div>
    </div>
  </div>
</section>


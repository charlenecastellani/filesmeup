<div class="container-2">
    <div class="item-2"><p>Demandes faites</p>
      <% @emetteur_requests.each do |request| %>
        <div class="cards">

          <%= link_to request_path(request), class: "remove_link_style" do  %>
            <div class="card-demande">

              <li><p>titre :<%=request.titre %></p></li>
              <p>destinataire:<%=request.destinataire.entreprise %></p>
              <p>date d'échéance<%=request.date_echeance.strftime("%d/%m/%Y") %></p>
              <p>avancement : <%= request.avancement%> %</p>
              <p> nouveau document <%= @doc_a_valider%></p>
            </div>
          <% end %>
        </div>
      <% end %>

    </div>




    <div class="item-2"><p>Demandes reçues</p>
      <% @destinataire_requests.each do |request| %>
        <%= link_to request_path(request), class: "remove_link_style" do  %>
           <div class="cards">
            <div class="card-demande">
              <p>titre :<%=request.titre %></p>
              <p>emetteur :<%=request.emetteur.entreprise %></p>
              <p>date d'échéance :<%=request.date_echeance.strftime("%d/%m/%Y") %></p>
              <p>avancement : <%= request.avancement%> %</p>
              <p>document refusé <%= @doc_refuse%> </p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    </div>
</div>



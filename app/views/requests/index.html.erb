<section class="recent">
  <div class="activity-grid">
    

    <div class="demandes">
      <div class="activity-card">
        <div class="demandes_faites">
            <div class="text-left">
            <h2>Demandes faites :</h2>
            </div>
            <div class="text-center">
            <%= link_to "créer une nouvelle demande",new_request_path, class: "btn btn-primary couleur" %>
            </div>
            <% @emetteur_requests.each do |request| %>
              <div class="cards">
                <%= link_to request_path(request), class: "remove_link_style" do  %>
                  <div class="card-demande">

                    <h4><%=request.titre %></h4>
                    <p><i class="far fa-building mr-2"></i><%=request.destinataire.entreprise %></p>

                    <!---
                    <p>Pourcentage <%= request.avancement%> %</p>
                    ---->
                      <% if @doc_a_valider > 0  %>
                      <p class="warning">
                        <i class="fas fa-exclamation-triangle"></i>
                      </p>
                      <% end %>

                    <p><i class="fas fa-hourglass-start mr-2"></i> J -  <%= ((request.date_echeance - Time.new)/60/60/24).to_i %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
         </div>
      </div>
    
      <div class="activity-card">

          <div class="demandes_recues">
          <div class="text-left">
            <h2>Demandes reçues :</h2>
          </div>
            <% @destinataire_requests.each do |request| %>
              <%= link_to request_path(request), class: "remove_link_style" do  %>
                <div class="cards">
                  <div class="card-demande">
                    <p><%=request.titre %></p>
                    <p> De : <%=request.emetteur.entreprise %></p>
                    <p>échéance : <%=request.date_echeance.strftime("%d/%m/%Y") %></p>
                    <p>avancement : <%= request.avancement%> %</p>
                    <p>document refusé ? <%= @doc_refuse%> </p>

                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</section>


    <section class="get_in_touch">
      <h1 class="titre">Nouvelle demande</h1>
        <div class="container">
          <div class="contact-form row">
            <div class="text-center">


            <%= simple_form_for(@request) do |f| %>
            <div class="form-field col-lg-6">
              <%= f.label :titre, class: "label" %>
              <%= f.text_field :titre, class:"input-text"%>

            </div>

            <div class="form-field col-lg-6">

              <%= f.association :destinataire, collection: User.all, label_method: :email, class:"input-text"%>


            </div>

            <div class="form-field col-lg-6">
              <%= f.input :date_creation, as: :string, required: false, input_html: {class: "datepicker"}  %>
            </div>

            <div class="form-field col-lg-6">
              <%= f.input :date_echeance, as: :string, required: false, input_html: {class: "datepicker"} %>
            </div>

            <div class="form-field col-lg-6">
            <%= f.button :submit, "Créer", class: "btn btn-pink" %>
            </div>
            <% end %>
            </div>
        </div>
    </section>






<div class="container" >
  <div class="row justify-content-center">
    <div class="col-md-12">
      <h1>Modifier</h1>
      <br>
      <%= form_for(@request) do |f| %>
       <%= f.label :titre %>
       <%= f.text_field :titre %>
       <%= f.label :date_echeance, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.text_field :date_echeance, as: :string, required: false, input_html: {class: "datepicker"} %>
       <%= f.submit value= "Valider" %>
      <% end %>
    </div>
  </div>
</div>
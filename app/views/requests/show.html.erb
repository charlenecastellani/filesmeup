<h1>show request</h1>
<div class="container">

  <h1><%= @request.titre %></h1>
  <h2> date d'échéance : <%= @request.date_echeance.strftime("%d/%m/%Y") %>   :   J -  <%= ((@request.date_echeance - Time.new)/60/60/24).to_i %> </h2>
  <%= link_to "Back to Dashboard", requests_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Fichiers demandés</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Nom</th>
            <th>Description</th>
            <th>Etat_document</th>
          </thead>
          <% @request.documents.each do |document| %>
            <tr>
              <td><%= document.nom %></td>
              <td><%= document.description %></td>
              <td><%= document.etat_document %></td>
              <td>
                <%= link_to "", document_path(document), method: :delete, class: "fa fa-trash destroy_dose" %>
                <% end %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
    <%= link_to "Ajouter un élément à la demande", new_request_document_path(@request) %>
      <%= link_to "Mise à jour de la demande", edit_request_path(@request) %>
  
    </div>
  </div>

</div>
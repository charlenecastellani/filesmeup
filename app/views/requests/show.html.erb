
<%= render "shared/sidebar" %>

<div class="main_content">
  <div class="header">
    <div class="row justify-content-between align-items-center">
      <div class="col-4">
        <h1><%= @request.titre %></h1>
        <h2> date d'échéance : <%= @request.date_echeance.strftime("%d/%m/%Y") %>   :   J -  <%= ((@request.date_echeance - Time.new)/60/60/24).to_i %> </h2>
      </div>
    <div class="col-4">
      <button class="btn btn-primary" type="submit"><%= link_to "Ajouter un élément à la demande", new_request_document_path(@request) %></button>
    </div>
  </div>  
    


<div class="info">
<section class="recent">
  <div class="activity-grid">
    <div class="activity-card">



  <div class="row">
      <h3>Fichiers demandés</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Nom</th>
            <th>Description</th>
            <th>Etat_document</th>
          </thead>
          <% @request.documents.each do |document| %>
            <tr>
              <td><%= document.nom %></td>
              <td><%= document.description %></td>
              <td><%= document.etat_document %></td>
              <td>
                <%= link_to "", document_path(document), method: :delete, class: "fa fa-trash destroy_dose" %>
                <% end %>
              </td>
            </tr>
        </tbody>
      </table>

    </section>

      
      
    </div>
    </div>
    



  </div>
  </div>
</div>
</div>